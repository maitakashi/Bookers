<head>

</head>

<body>
  <h1>BOOKS</h1>

  <%=   flash[:notice]  %>

  <table>
    <tr>
      <th>TITLE</th>
      <th>BODY</th>
    </tr>
      <tbody>
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book.id) %></td>
          <td><%= link_to "Edit", edit_book_path(book.id) %></td>
          <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
        </tr>
        <% end %>
      </tbody>
  </table>
</body>

<h2>NEW BOOK</h2>
<!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>



  <h4>TITLE</h4>
  <%= f.text_field :title %>

  <h4>BODY</h4>
  <%= f.text_area :body %>

  <p><%= f.submit 'Create Book' %></p>

<% end %>
