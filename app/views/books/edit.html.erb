<h1>Editing Book</h1>
<!-- form_with部分 -->

<%=   flash[:notice]  %>

<%= form_with model:@book, local: true do |f| %>
  <h4>TITLE</h4>
  <%= f.text_field :title %>
  <h4>BODY</h4>
  <%= f.text_area :body %>

  <p><%= f.submit "Update Book" %></p>

  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>


  <td><%= link_to "Show", book_path(@book.id) %></td>
  <%= link_to "Back", books_path %>

<% end %>